<%- include('partials/_header') %>

  <body>
    <%- include('partials/_navigation') %>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="page-heading">
                <h1>Edit The Post</h1>

              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <form novalidate method="post" action="/blogs/<%=blog._id %>?_method=PUT">
              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <label>Post Title</label>
                  <input type="text" class="form-control" placeholder="Name" name="title" id="name" required
                    data-validation-required-message="Please enter your name."  value="<%=blog.title %>">
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <label>Post Detail</label>
                  <textarea rows="5" class="form-control" placeholder="Message" name="detail" id="message" required
                    data-validation-required-message="Please enter a message."><%= blog.detail %></textarea>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <br>
              <div id="success"></div>
              <button type="submit" class="btn btn-warning" id="sendMessageButton">Update</button>
            </form>
          </div>
        </div>
      </div>

      <hr>
      <%- include('partials/_footer') %>

        <!-- Contact Form JavaScript -->
        <script src="/js/jqBootstrapValidation.js"></script>
        <script src="/js/contact_me.js"></script>


  </body>

  </html>